//5c.css
body {
    font-family: Arial, sans-serif;
    margin: 20px;
  }
  
  h1 {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
  }
  
  .font-size {
    font-size: 30px;
  }
  
  .font-weight {
    font-weight: bold;
  }
  
  .font-style {
    font-style: italic;
  }
  
  .text-decoration {
    text-decoration: underline;
  }
  
  .text-transformation {
    text-transform: uppercase;
  }
  
  .text-alignment {
    display: block; /* Ensures alignment works */
    text-align: center;
  }
