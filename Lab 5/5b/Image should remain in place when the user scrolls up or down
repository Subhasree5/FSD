//5bstyles.css
body {
    background-image: url('5b.jpg'); /* Replace with the actual image path */
    background-position: center 50%; /* Center horizontally and halfway down vertically */
    background-repeat: repeat-x; /* Repeat the image horizontally */
    background-attachment: fixed; /* Keep the image fixed during scrolling */
    margin: 0;
    height: 200vh; /* Set height to make scrolling possible */
  }
  
  h1 {
    text-align: center;
    margin-top: 20px;
  }
  
  p {
    text-align: center;
    font-size: 18px;
  }
